#!/bin/bash

###############################################################
# unlock_pdf
# Unlocks a PDF file so that it can be printed, annotated, etc.
#
# WS 20110216
###############################################################
########## Changes ##########
####
# Errors are printed to stderr now
# WS 20110407
####
# Corrected test for file
# WS 20110426
####

input=$1
rc=0

usage () {
cat << END

`basename $0` unlocks a given PDF file

Usage: `basename $0` <pdf_file>

The unlocked PDF file can be found in the same directory as the original file, with "_unlocked" appended to the file name.

END

}

#### Error handling
# Check if gs exists
if which gs &> /dev/null; then
	:
else
	echo "\"gs\" is not in path (${PATH}). You might want to install the package \"ghostscript\" or check your PATH settings." 1>&2
	exit 1
fi

# Do we have a file name?
if [ -z "$input" ]; then
	usage 1>&2
	exit 1

fi

# Does the file exist?
if [ -f "$input" ]; then
	if [ ! -r "$input" ]; then
		echo "Error: Could not read ${input}." 1>&2
		exit 1
	fi
else
	echo "Error: Could not find file ${input}." 1>&2
	exit 1
fi

# Is the file a PDF document?
if ! file $input 2>&1 | grep "PDF document" &> /dev/null; then
	echo "Error: $input is not a PDF document." 1>&2
	usage 1>&2
	exit 1
fi

# Setting target file name
output="`dirname ${input}`/`basename $input .pdf`_unlocked.pdf"
if [ "$output" == "" -o "$output" == "$input" ]; then
	echo "Error: Could not set output file name. Are \"basename\" and \"dirname\" installed and in path?" 1>&2
	exit 1
fi

# We'll remove the output file if the progam is aborted
trap 'rm -rf ${output} &> /dev/null; echo "Programm aborted" 1>&2; exit 99' 1 2 3 15

#### Here we go
echo "Writing to ${output}..."
gs -q -dSAFER -dBATCH -dNOPAUSE -sDEVICE=pdfwrite -sPDFPassword="" -dPDFSETTINGS=/prepress -dPassThroughJPEGImages=true -sOutputFile="$output" "$input"
rc=$?

if [ $rc -eq 0 ]; then
	echo "...done."
else
	echo "...done with errors. Please check ${output}."
fi

exit $rc

# EOF
